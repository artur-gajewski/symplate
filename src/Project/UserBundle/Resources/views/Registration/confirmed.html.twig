{% extends '::base.html.twig' %}

{% block content %}
    <div class="row-fluid login">
        <div class="dialog">

            <h1 class="frontLogo">{{ site_title }}</h1>
            
            <div class="block" style="padding: 10px">
                <div class="block-header">
                    <h2>Register</h2>
                </div>
                {% block fos_user_content %}
                    <p>{{ 'registration.confirmed'|trans({'%username%': user.name}, 'FOSUserBundle') }}</p>
                    <p><a href="{{ path('CobaseAppBundle_homepage') }}">&laquo; Go to main page</a></p>
                {% endblock fos_user_content %}
            </div>
        </div>
    </div>
{% endblock content %}



