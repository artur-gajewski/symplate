<!DOCTYPE html>
    <!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
    <!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
    <!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
    <!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{{ site_title }}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">

        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <style>
            body {
                padding-top: 50px;
                padding-bottom: 20px;
            }
        </style>
        <link rel="stylesheet" href="{{ asset('css/bootstrap-theme.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">

        <script src="{{ asset('js/vendor/modernizr-2.6.2.min.js') }}"></script>
        <script src="{{ asset('js/holder.js') }}"></script>
    </head>
    <body>
        <!--[if lt IE 7]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
        <![endif]-->
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('ProjectTemplateBundle_home') }}">{{ site_title }}</a>
                </div>
                <div class="navbar-collapse collapse pull-right">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('ProjectTemplateBundle_home') }}">{{ 'navigation.home'|trans }}</a></li>
                        <li><a href="#about">{{ 'navigation.about'|trans }}</a></li>
                        <li><a href="#contact">{{ 'navigation.contact'|trans }}</a></li>
                        <li class="dropdown pull-right">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">User CP <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <li><a href="{{ path('fos_user_profile_edit') }}">{{ 'navigation.profile'|trans }}</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">{{ 'navigation.logout'|trans }}</a></li>
                            {% else %}
                                <li><a href="{{ path('fos_user_security_login') }}">{{ 'navigation.login'|trans }}</a></li>
                                <li><a href="{{ path('fos_user_registration_register') }}">{{ 'navigation.register'|trans }}</a></li>
                            {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div><!--/.navbar-collapse -->
            </div>
        </div>

        <!-- Main jumbotron for a primary marketing message or call to action -->
        {% block jumbotron %}
        <div class="jumbotron">
            <div class="container">
                <h1>{{ 'hero.slogan'|trans }}</h1>
                <p>{{ 'hero.content'|trans }}</p>
            </div>
        </div>
        {% endblock %}

        <div class="container">
            {% block content %}{% endblock %}
        </div> <!-- /container -->

        <footer class="full-width">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 footer-column">
                        <h3>{{ 'footer.navigate.title'|trans }}</h3>
                        <p><a href="#">{{ 'footer.navigate.home'|trans }}</a></p>
                        <p><a href="#">{{ 'footer.navigate.about'|trans }}</a></p>
                        <p><a href="#">{{ 'footer.navigate.contact'|trans }}</a></p>
                    </div>
                    <div class="col-sm-4 footer-column">
                        <h3>{{ 'footer.tell_your_friends.title'|trans }}</h3>
                        <p>{{ 'footer.tell_your_friends.sub'|trans }}</p>
                        <!-- AddThis Button BEGIN -->
                        <div class="addthis_toolbox addthis_default_style addthis_32x32_style" addthis:url="{{ app.request.uriForPath() }}">
                            <a class="addthis_button_facebook"></a>
                            <a class="addthis_button_twitter"></a>
                            <a class="addthis_button_linkedin"></a>
                            <a class="addthis_button_email"></a>
                            <a class="addthis_button_stumbleupon"></a>
                        </div>
                        <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=s"></script>
                        <!-- AddThis Button END -->
                    </div>
                    <div class="col-sm-4 footer-column">
                        <h3>{{ 'footer.contact_us.title'|trans }}</h3>
                        <address>
                            <strong>Company Inc.</strong><br>
                            123 Symfony Ave, Suite 123<br>
                            Helsinki 00100, Finland<br>
                            {{ 'footer.contact_us.phone'|trans }}: (123) 123-4321
                        </address>
                    </div>
                </div>
            </div>
        </footer>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script src="{{ asset('js/vendor/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/plugins.js') }}"></script>
        <script src="{{ asset('js/main.js') }}'"></script>
    </body>
</html>




